{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "target": "es5",
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "pretty": true,
        "preserveConstEnums": true,
        "useDefineForClassFields": true,
        "noEmit": false,
        "strictFunctionTypes": true,
        "typeRoots": [
            "types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/server/lib/SACP-SDK/node_modules",
        "./src/server/lib/SACP-SDK/tests",
        "node_modules",
    ]
}